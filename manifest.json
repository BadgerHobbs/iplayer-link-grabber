{
  "manifest_version": 3,
  "name": "iPlayer Link Grabber",
  "version": "1.1",
  "description": "Collects iPlayer episode links from multiple pages and copies the full list to the clipboard.",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
